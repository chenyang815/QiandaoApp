<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cn.edu.glut.glutqiandao.quiz.AnswerQuizActivity"
    tools:showIn="@layout/activity_answer_quiz"
    xmlns:stv="http://schemas.android.com/apk/res-auto"

    >
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:gravity="center"
        >





        <com.allen.library.SuperTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            stv:sLeftTextString="题目：" />

        <com.allen.library.SuperTextView
            android:id="@+id/course"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            stv:sLeftTextString="课程：" />




        <com.allen.library.SuperButton
            android:id="@+id/answerbt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            stv:sUseSelector="true"
            stv:sCornersRadius="10dp"
            stv:sSelectorNormalColor="@color/loginbt"
            stv:sStrokeWidth="0.2dp"
            stv:sSelectorPressedColor="@color/grgray"
            android:text="想回答" />


    </LinearLayout>
</LinearLayout>
