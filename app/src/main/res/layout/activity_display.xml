<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DisplayActivity"
    tools:layout_editor_absoluteY="81dp">

    <Spinner
        android:id="@+id/select"

        android:layout_width="146dp"
        android:layout_height="50dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="25dp"
        android:background="@color/bg_color"
        android:prompt="@string/selecttip"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/timesection"
        app:layout_constraintEnd_toStartOf="@+id/timebutton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516">

    </Spinner>


    <com.allen.library.SuperButton
        android:id="@+id/timebutton"
        android:layout_width="136dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginTop="5dp"
        android:text="点击选择时间范围"
        app:layout_constraintBottom_toTopOf="@+id/timesection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/select"
        app:layout_constraintTop_toTopOf="parent"
        stv:sCornersRadius="10dp"
        stv:sSelectorNormalColor="@color/bg_color"
        stv:sSelectorPressedColor="@color/grgray"
        stv:sStrokeWidth="0.2dp"
        stv:sUseSelector="true" />

    <com.allen.library.SuperTextView
        android:id="@+id/timesection"
        android:layout_width="168dp"
        android:layout_height="52dp"
        android:layout_marginBottom="405dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timebutton"
        stv:sCenterTextString="2018-4-11到5-12" />

    <com.allen.library.SuperButton
        android:id="@+id/querybtn"
        android:layout_width="136dp"
        android:layout_height="51dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="查询"
        app:layout_constraintBottom_toTopOf="@+id/itemframe"
        app:layout_constraintStart_toEndOf="@+id/timesection"
        app:layout_constraintTop_toBottomOf="@+id/timebutton"
        stv:sCornersRadius="10dp"
        stv:sSelectorNormalColor="@color/bg_color"
        stv:sSelectorPressedColor="@color/grgray"
        stv:sStrokeWidth="0.2dp"
        stv:sUseSelector="true" />


    <com.chanven.lib.cptr.PtrClassicFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemframe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        cube_ptr:layout_constraintBottom_toBottomOf="parent"
        cube_ptr:layout_constraintEnd_toEndOf="parent"
        cube_ptr:layout_constraintHorizontal_bias="0.0"
        cube_ptr:layout_constraintStart_toStartOf="parent"
        cube_ptr:layout_constraintTop_toBottomOf="@+id/querybtn"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="700"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.8">

        <ListView
            android:id="@+id/items_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.chanven.lib.cptr.PtrClassicFrameLayout>


</android.support.constraint.ConstraintLayout>